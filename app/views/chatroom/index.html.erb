<h3 style="margin-top: 10px;" class="ui center aligned mediun icon header">
  <i class="circular coffee red icon"></i>
  Say Something..
</h3>

<div class="ui two column grid" style="margin-top: 20px;">
<!-- messaging feed -->
 <div class="twelve wide column">
	 <div class="ui fluid raised card chatbox">
	   <div class="content">
		<div class="ui feed">
		  <!-- <h4 class="ui header">Followers Activity</h4> -->
		  <%= render @messages %>
		</div>
	   </div>
	   <div class="extra content">
	   	<%= form_for(@message, html: {class:"ui reply form", role: "form"}, url: message_path) do |f| %>
		    <div class="field">
		    </div>
		    <div class="ui fluid icon input">
		    	<%= f.text_field :body %>
		    	<!-- <input type="text" placeholder="Enter message here"> -->
		      <%= f.button '<i class="bordered inverted orange icon edit"></i>'.html_safe %> 
		    </div>
		  <% end %>
	   </div>
    </div>
   </div>
   <!-- Menu vertical -->
     <div class="four wide column">
     	<div class="ui fluid raised card chatbox">
     		<div class="content">
     			<div class="ui inverted vertical menu">
					  <a class="active item">
					    Home
					  </a>
					  <a class="item">
					    Messages
					  </a>
					  <a class="item">
					    Friends
					  </a>
					</div>
			    </div>

     		</div>
     	</div>
		

</div>
